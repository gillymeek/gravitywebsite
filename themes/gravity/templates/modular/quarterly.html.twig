<div class="white">
  <section id="quarterly" class="medium-text-left text-center">
    <div class="row">
      <div class="large-12 columns text-center">
        <div id="pyramid"></div>
        <h2>{{ page.title }}</h2>
      </div>
    </div>
    <div class="row">
      <div class="large-4 columns">
        {{ content }}
      </div>
      <div class="large-4 large-text-left text-center columns">
        <ul class="no-bullet">
        {% for list in page.header.list %}
          <li>{{ list }}</li>
        {% endfor %}
        </ul>
      </div>
      <div class="large-4 columns">
        <h5>Event dates</h5>
        {% for dates in page.header.dates %}
          <p>{{ dates }}</p>
        {% endfor %}
        <a class="button typeform-share link" href="https://gravitytraining.typeform.com/to/KP51um" data-mode="2" target="_blank" class="button">Book this course</a>
        <a class="button secondary" href="/user/themes/gravity/pdfs/The%20Essential%20Training%20Course%20for%20Managers.pdf" target="_blank">Download the PDF</a>
      </div>
    </div>
  </section>
</div>
